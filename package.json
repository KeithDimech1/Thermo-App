{
  "name": "thermo-app",
  "version": "1.0.0",
  "description": "Thermochronology geochronology database - Interactive viewer for fission-track, (U-Th)/He, and U-Pb data",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:timed": "./scripts/dev-timed 60 npm run dev",
    "dev:timed-30": "./scripts/dev-timed 30 npm run dev",
    "dev:timed-120": "./scripts/dev-timed 120 npm run dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "pre-deploy": "bash scripts/pre-deploy-check.sh",
    "deploy-check": "npm run type-check && npm run lint && npm run build",
    "db:test": "tsx scripts/db/test-connection.ts",
    "db:schema": "psql $DATABASE_URL -f scripts/db/schema.sql",
    "db:import": "tsx scripts/db/import-data.ts",
    "db:import-thermo": "tsx scripts/db/import-thermo-data.ts",
    "db:verify": "tsx scripts/db/verify-import.ts",
    "db:reset": "tsx scripts/db/reset-database.ts",
    "db:setup": "npm run db:schema && npm run db:import && npm run db:verify",
    "db:console": "psql $DATABASE_URL",
    "db:psql": "./scripts/db/psql-direct.sh",
    "db:psql-pooled": "./scripts/db/psql-pooled.sh",
    "db:psql-timed": "./scripts/dev-timed 60 ./scripts/db/psql-direct.sh",
    "db:verify-connection": "./scripts/db/psql-direct.sh -c 'SELECT current_database(), current_user, version();'"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.70.1",
    "@supabase/supabase-js": "^2.84.0",
    "@tanstack/react-table": "^8.21.3",
    "@types/formidable": "^3.4.6",
    "@types/jszip": "^3.4.0",
    "canvas": "^3.2.0",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "exceljs": "^4.4.0",
    "formidable": "^3.5.4",
    "glob": "^12.0.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.553.0",
    "nanoid": "^5.1.6",
    "next": "^16.0.3",
    "pdf-parse": "^2.4.5",
    "pdfjs-dist": "^5.4.394",
    "pg": "^8.11.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.3",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
