{
  "name": "thermo-app",
  "version": "1.0.0",
  "description": "Thermochronology geochronology database - Interactive viewer for fission-track, (U-Th)/He, and U-Pb data",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "pre-deploy": "bash scripts/pre-deploy-check.sh",
    "deploy-check": "npm run type-check && npm run lint && npm run build",
    "db:test": "tsx scripts/db/test-connection.ts",
    "db:schema": "psql $DATABASE_URL -f scripts/db/schema.sql",
    "db:import": "tsx scripts/db/import-data.ts",
    "db:import-thermo": "tsx scripts/db/import-thermo-data.ts",
    "db:verify": "tsx scripts/db/verify-import.ts",
    "db:reset": "tsx scripts/db/reset-database.ts",
    "db:setup": "npm run db:schema && npm run db:import && npm run db:verify",
    "db:console": "psql $DATABASE_URL"
  },
  "dependencies": {
    "@tanstack/react-table": "^8.21.3",
    "@types/jszip": "^3.4.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.553.0",
    "next": "^14.0.0",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
